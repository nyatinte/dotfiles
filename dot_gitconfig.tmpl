[user]
	email = {{ .git.email }}
	name = {{ .git.name }}

[init]
	defaultBranch = main

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	side-by-side = true

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	df = diff
	lg = log --oneline --decorate --all --graph