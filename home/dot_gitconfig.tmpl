[user]
	email = {{ .git.email }}
	name = {{ .git.name }}

[init]
	defaultBranch = main

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	side-by-side = true

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	df = diff
	lg = log --oneline --decorate --all --graph

[submodule]
	recurse = true

[gtr] # https://github.com/coderabbitai/git-worktree-runner#configuration-examples
[gtr.editor]
	default = code
[gtr.ai]
	default = claude
[gtr.copy]
	include = ["CLAUDE.md", ".claude/"]
