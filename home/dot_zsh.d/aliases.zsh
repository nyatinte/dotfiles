# エイリアス設定 - 改良版コマンドツール

# catの代替 - シンタックスハイライト付き
alias cat='bat'

# Git便利エイリアス
alias g='git'
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git pull'
alias gd='git diff'
alias gb='git branch'
alias gco='git checkout'
alias gcb='git checkout -b'
alias glog='git log --oneline --graph --decorate'
alias gprw="gh pr view --web"

# システム
alias reload='source ~/.zshrc'

alias cc='claude'

# rmの代替 - ゴミ箱に移動
alias rm='safe-rm'
